{
  "defaults": {
    "id": {
      "strategy": "uuid_v7",
      "fallback": "uuid_v4"
    },
    "timestamps": {
      "created_at": true,
      "updated_at": true,
      "deleted_at": true,
      "format": "timestamptz"
    },
    "soft_delete": {
      "enabled": true,
      "strategy": "timestamp",
      "field": "deleted_at"
    },
    "versioning": {
      "enabled": true,
      "field": "version",
      "strategy": "optimistic_locking",
      "initial_value": 1
    },
    "audit": {
      "enabled": true,
      "track_changes": true,
      "store": "audit_log",
      "fields": ["created_by", "updated_by", "deleted_by"]
    },
    "tenant": {
      "enabled": true,
      "isolation": "schema",
      "column": "tenant_id",
      "type": "uuid",
      "required": true,
      "immutable": true,
      "schema_template": "tenant_${tenant_id}"
    }
  }
}